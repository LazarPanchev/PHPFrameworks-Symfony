{% extends 'base.html.twig' %}
{% block body %}
    {% for msg in app.session.flashBag.get('error') %}
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">x</a>
            {{ msg }}
        </div>
    {% endfor %}
    {# add this at the beginning of your template #}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    <div class="row" id="ddd">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="panel panel-primary" id="sss">
                <div class="panel-heading">
                    <h3 class="panel-title">Create User</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(form,{'attr':{'novalidate':'validate', 'class':'form-control' }}) }}
                    <div class="form-group {% if not form.username.vars.valid %}has-error{% endif %}">
                        {{ form_label(form.username, null, {'label_attr': {'class':'col-sm-2 control'}}) }}
                        <div class="col-sm-5">
                            {{ form_widget(form.username, {'attr':{'class':'form-control'}}) }}
                        </div>
                        <div style="color: red">{{ form_errors(form.username) }}</div>
                    </div>
                    <div id="ppp" class="form-group {% if not form.email.vars.valid %}has-error{% endif %}">
                        {{ form_label(form.email, null, {'label_attr': {'class':'col-sm-2 control'}}) }}
                        <div class="col-sm-5">
                            {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
                        </div>
                        <div style="color: red">{{ form_errors(form.email) }}</div>
                    </div>
                    <div class="form-group {% if not form.phone.vars.valid %}has-error{% endif %}">
                        {{ form_label(form.phone, null, {'label_attr': {'class':'col-sm-2 control'}}) }}
                        <div class="col-sm-5">
                            {{ form_widget(form.phone, {'attr':{'class':'form-control'}}) }}
                        </div>
                        <div style="color: red">{{ form_errors(form.phone) }}</div>
                    </div>
                    {#<div style="color: blueviolet">{{ form_label(form.email) }}#}
                        {#{{ form_widget(form.email) }}#}
                        {#<div style="color: red">{{ form_errors(form.email) }}</div>#}
                    {#</div>#}
                    {#<div style="color: blueviolet">{{ form_label(form.phone) }}#}
                        {#{{ form_widget(form.phone) }}#}
                        {#<div style="color: red">{{ form_errors(form.phone) }}</div>#}
                    {#</div>#}
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
    {# this alternative theme is also available #}
    {% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

    <script>
        // let errorBox= $('#error');
        // let li = $('<li>Hello</li>');
        // errorBox.append(li);
    </script>
{% endblock %}