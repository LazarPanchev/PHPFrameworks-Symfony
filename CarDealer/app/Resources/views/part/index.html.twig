{% extends 'base.html.twig' %}

{% block body %}
    {#<div class="page-header" style="background: #aacd4e"><h2 class="text-center">CUSTOMERS</h2></div>#}
    <div class="jumbotron" style="background-color: orangered"><h3 class="text-center">Parts List</h3></div>
    <div class="container table-responsive">
        <h2>Sale Information</h2>
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th class="success">ID:</th>
                <th class="success">Part name</th>
                <th class="warning">Part price</th>
                <th class="danger">Part quantity</th>
                <th class="danger">Actions</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                {% for part in parts %}
            <tr>
                <td class="success">{{ part.id }}</td>
                <td class="success">{{ part.name }}</td>
                <td class="warning">{{ part.price }}</td>
                <td class="danger">{{ part.quantity }}</td>
                <td class="danger">
                    <ul>
                        <li>
                            <a href="{{ path('parts_edit', { 'id': part.id }) }}">edit</a>
                        </li>
                        <li>
                            <a href="{{ path('parts_delete', { 'id': part.id }) }}">delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
    <script type="text/javascript">
        // $(document).ready(function () {
        //     $("table").footable();
        // })
    </script>

{% endblock %}
