{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="container" style="background-color: #b2dba1">
        <div class="row">
            <div class="col-xs-4">
                <h2 style="color: #67b168">Add Part</h2>
                <hr>
                <div class="form-group">
                    <div>{{ form_row(form.name) }}</div>
                </div>
                <div class="form-group">
                    <div>{{ form_row(form.price) }}</div>
                </div>
                <div class="form-group">
                    <div>{{ form_row(form.quantity) }}</div>
                </div>
                <div class="form-group">
                    <div>{{ form_row(form.supplier) }}</div>
                </div>
                <div class="form-group">
                    <div>{{ form_row(form.save) }}</div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    <div class="btn-lg">
        <button class="btn-sm"><a href="{{ path('parts_index') }}">Back to the list</a></button>
    </div>
{% endblock %}
