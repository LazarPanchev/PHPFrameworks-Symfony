{% extends "base.html.twig" %}

{% block body %}
    {#<div class="page-header" style="background: #aacd4e"><h2 class="text-center">CUSTOMERS</h2></div>#}
    <div class="jumbotron" style="background-color: #b2dba1"><h3 class="text-center">Suppliers {{ typeSupplier }}</h3></div>
    <div class="container table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>N:</th>
                <th class="success">Id Num</th>
                <th class="warning">Supplier Name</th>
                <th class="danger">Is Importer?</th>
                <th class="danger">Number of parts can offer</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                {% for supplier in suppliers %}
            <tr>
                {# @var supplier \AppBundle\Entity\Supplier #}
                <td>{{ loop.index }}</td>
                <td class="success">{{ supplier.id}}</td>
                <td class="warning">{{ supplier.name }}</td>
                <td class="danger">{{ supplier.isImporter ? 'Yes' : "No" }}</td>
                <td class="danger">{{ supplier.partsCanOffer}}</td>
            </tr>
            </tbody>
            {% endfor %}
        </table>
    </div>
    <script type="text/javascript">
        // $(document).ready(function () {
        //     $("table").footable();
        // })
    </script>
{% endblock %}