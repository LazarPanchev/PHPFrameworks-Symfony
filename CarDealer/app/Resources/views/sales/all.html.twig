{% extends "base.html.twig" %}

{% block body %}
    {#<div class="page-header" style="background: #aacd4e"><h2 class="text-center">CUSTOMERS</h2></div>#}
    <div class="jumbotron" style="background-color: orangered"><h3 class="text-center">All Sales</h3></div>
    <div class="container table-responsive">
        <h2>Sale Information</h2>
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>N:</th>
                <th class="success">Car Make</th>
                <th class="warning">Car Model</th>
                <th class="danger">Customer name</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                {% for sale in sales %}
            <tr>
                {# @var sale \AppBundle\Entity\Sale #}
                <td>{{ loop.index }}</td>
                <td class="success">{{ sale.car.make }}</td>
                <td class="warning">{{ sale.car.model}}</td>
                <td class="danger">{{ sale.customer.name }}</td>
            </tr>
            </tbody>
            {% endfor %}
        </table>
    </div>
    <script type="text/javascript">
        // $(document).ready(function () {
        //     $("table").footable();
        // })
    </script>
{% endblock %}