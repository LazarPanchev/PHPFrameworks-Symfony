{% extends "base.html.twig" %}

{% block body %}
    {#<div class="page-header" style="background: #aacd4e"><h2 class="text-center">CUSTOMERS</h2></div>#}
    <div class="jumbotron" style="background-color: orangered"><h3 class="text-center">Sales With Discount</h3></div>
    <div class="container table-responsive">
        <h2>Sales With Discount</h2>
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th class="success">Sale ID N</th>
                <th class="warning">Discount Percent</th>
                <th class="danger">Car Make</th>
                <th class="success">Car Model</th>
                <th class="warning">Customer Name</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                {% for sale in sales %}
            <tr>
                {# @var sale \AppBundle\Entity\Sale #}
                <td class="success">{{ sale.id}}</td>
                <td class="warning">{{ sale.discount }}</td>
                <td class="danger">{{ sale.car.make}}</td>
                <td class="success">{{ sale.car.model}}</td>
                <td class="warning">{{ sale.customer.name }}</td>
            </tr>
            </tbody>
            {% endfor %}
        </table>
    </div>
    <script type="text/javascript">
        // $(document).ready(function () {
        //     $("table").footable();
        // })
    </script>
{% endblock %}