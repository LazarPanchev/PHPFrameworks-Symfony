{% extends "base.html.twig" %}

{% block body %}
    {#<div class="page-header" style="background: #aacd4e"><h2 class="text-center">CUSTOMERS</h2></div>#}
    <div class="jumbotron" style="background-color: orangered"><h3 class="text-center">CAR Details</h3></div>
    <div class="container table-responsive">
        <h3>Car</h3>
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th class="success">Car Make</th>
                <th class="warning">Car Model</th>
                <th class="danger">Travelled Distance</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                {# @var car \AppBundle\Entity\Car #}
                <td class="success">{{ car.make }}</td>
                <td class="warning">{{ car.model }}</td>
                <td class="danger">{{ car.travelledDistance|number_format() }}</td>
            </tr>
            </tbody>
        </table>
        <h3>Parts</h3>
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th class="success">Part Name</th>
                <th class="danger">Part Price</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td class="success">
                    {% for part in car.parts %}
                        {{ part.name }}
                        <br>
                    {% endfor %}
                </td>
                <td class="danger">
                    {% for part in car.parts %}
                        {{ part.price }}
                        <br>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <td style="background-color: indianred">Total {{ car.getTotalParts }} parts</td>
                <td style="background-color: indianred">Sum {{ car.totalSum }} $</td>
            </tr>

            </tbody>

        </table>
    </div>
    <script type="text/javascript">
        // $(document).ready(function () {
        //     $("table").footable();
        // })
    </script>
{% endblock %}