{% extends "base.html.twig" %}

{% block body %}
    {#<div class="page-header" style="background: #aacd4e"><h2 class="text-center">CUSTOMERS</h2></div>#}
    <div class="jumbotron" style="background-color: #67b168"><h3 class="text-center">CUSTOMERS</h3></div>
    <div class="container table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>N:</th>
                <th class="success">Customer Name</th>
                <th class="warning">Customer Birth Date</th>
                <th class="danger">Is young driver?</th>
                <th class="success">Details For Customer</th>

            </tr>
            </thead>
            <tbody>
            <tr>
                {% for customer in customers %}
            <tr>
                {# @var customer \AppBundle\Entity\Customer #}
                <td>{{ loop.index }}</td>
                <td class="success">{{ customer.name }}</td>
                <td class="warning">{{ customer.birthDate|date("d/m/Y") }}</td>
                <td class="danger">{{ customer.isYoungDriver }}</td>
                <td class="success"><a href="{{ path('customers_one_sale', {'id': customer.id}) }}" style="color: green">Details</a></td>

            </tr>
            </tbody>
            {% endfor %}
        </table>
    </div>
    <script type="text/javascript">
    // $(document).ready(function () {
    //     $("table").footable();
    // })
    </script>
{% endblock %}