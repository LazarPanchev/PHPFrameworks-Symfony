<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width = device-width, initial-scale = 1">
    <title>Products</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    {% endblock %}
    <style>
        .jumbotron {
            background-color: purple;
            color: white;
        }
    </style>
</head>
<body>

{% block header %}
    <header>
        <div class="container">
            <div class="navbar navbar-default">

                <div class="jumbotron">
                    <div class="page-header">
                        <h3>Products</h3>
                    </div>
                    <div class="container">
                        <ul class="nav nav-pills">
                            <li class="active"><a href="{{ path('home') }}">Home</a>
                            <li><a href="{{ path('home') }}">About</a>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="{{ path('home') }}">Categories
                                    <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li class="disabled"><a href="{{ path('home') }}">The flash</a></li>
                                    <li><a data-toggle="tab" href="{{ path('home') }}">kid flash</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        {% if app.user %}
                            <li>
                                <a href="{{ path('') }}">
                                    My Products
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('') }}">
                                    My Profile
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('') }}">
                                    Logout
                                </a>
                            </li>
                        {% else %}
                            <li>
                                <a href="{{ path('home') }}">
                                    REGISTER
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('home') }}">
                                    LOGIN
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
        </div>
    </header>
{% endblock %}
{% block body %}{% endblock %}

{% block footer %}
    <h2>Footer</h2>
    {% block city %}
        Sofia
        {% set pop="here" %}
    {% endblock %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
{% endblock %}
</body>
</html>
